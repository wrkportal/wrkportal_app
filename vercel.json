{
  "crons": [
    {
      "path": "/api/cron/integration-sync",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/follow-up-automation",
      "schedule": "0 0 * * *"
    }
  ],
  "buildCommand": "pnpm run vercel-build",
  "installCommand": "pnpm install --frozen-lockfile --prefer-offline",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    },
    "app/**/*.tsx": {
      "maxDuration": 30
    }
}
}
