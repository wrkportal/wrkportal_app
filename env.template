# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values

# DATABASE CONFIGURATION
# For Neon.tech, use the pooler connection string (has -pooler in hostname) for better performance
# Example: postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/db?sslmode=require
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# NEXTAUTH CONFIGURATION
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-using-openssl-rand-base64-32"

# GOOGLE OAUTH
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# EMAIL SERVICE (Required for email verification, password reset, etc.)
# Option 1: Using SMTP (Gmail, SendGrid, Mailgun, etc.)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourcompany.com"

# Option 2: Alternative variable names (also supported)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# AI CONFIGURATION
# Primary Provider: Azure OpenAI Service (Enterprise-grade, recommended)
AI_PROVIDER="azure-openai" # Options: azure-openai, openai (legacy)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key-here"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4" # Your Azure OpenAI deployment name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME="text-embedding-ada-002" # Your Azure OpenAI embedding deployment name

# Legacy OpenAI Configuration (for migration period only - will be removed)
# OPENAI_API_KEY="sk-your-openai-api-key-here"
# OPENAI_MODEL="gpt-4o"
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# CI/CD Webhook Configuration
# GitHub Actions webhook secret (for verifying webhook signatures)
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret-here"

# Jenkins webhook token (for authenticating webhook requests)
JENKINS_WEBHOOK_TOKEN="your-jenkins-webhook-token-here"

# TIER-BASED INFRASTRUCTURE (Phase 1: Free Tier Optimization)
# Different database connections for different tiers
# Free tier: Supabase Free (500 MB database, unlimited projects)
DATABASE_URL_SUPABASE_FREE="postgresql://user:pass@host:5432/db?sslmode=require"

# Starter/Professional tier: Neon.tech (serverless PostgreSQL)
# Use pooler connection string for better performance (has -pooler in hostname)
# Example: postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/db?sslmode=require
DATABASE_URL_NEON="postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/db?sslmode=require"

# Business/Enterprise tier: AWS Aurora Serverless v2 (enterprise-grade)
DATABASE_URL_AURORA="postgresql://user:pass@aurora-host:5432/db?sslmode=require"

# Default/fallback database URL (used if tier-specific URL not found)
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# AI FEATURES TOGGLE
AI_FEATURES_ENABLED="true"
AI_CHAT_ASSISTANT_ENABLED="true"
AI_RISK_PREDICTION_ENABLED="true"
AI_BUDGET_FORECASTING_ENABLED="true"

# REPORTING STUDIO ENCRYPTION KEY
# Used to encrypt sensitive data (database passwords, API keys, etc.)
# Generate with: openssl rand -base64 32
# IMPORTANT: Never commit this key to Git. Use different keys for dev/staging/production.
REPORTING_STUDIO_ENCRYPTION_KEY="generate-using-openssl-rand-base64-32"

