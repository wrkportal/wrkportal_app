# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values

# DATABASE CONFIGURATION
# For Neon.tech, use the pooler connection string (has -pooler in hostname) for better performance
# Example: postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/db?sslmode=require
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# NEXTAUTH CONFIGURATION
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-using-openssl-rand-base64-32"

# GOOGLE OAUTH
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# EMAIL SERVICE (Required for email verification, password reset, etc.)
# Option 1: Using SMTP (Gmail, SendGrid, Mailgun, etc.)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourcompany.com"

# Option 2: Alternative variable names (also supported)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# AI CONFIGURATION
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o" # or gpt-4o-mini for faster/cheaper responses
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# AI FEATURES TOGGLE
AI_FEATURES_ENABLED="true"
AI_CHAT_ASSISTANT_ENABLED="true"
AI_RISK_PREDICTION_ENABLED="true"
AI_BUDGET_FORECASTING_ENABLED="true"

# REPORTING STUDIO ENCRYPTION KEY
# Used to encrypt sensitive data (database passwords, API keys, etc.)
# Generate with: openssl rand -base64 32
# IMPORTANT: Never commit this key to Git. Use different keys for dev/staging/production.
REPORTING_STUDIO_ENCRYPTION_KEY="generate-using-openssl-rand-base64-32"

