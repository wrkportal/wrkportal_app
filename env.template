# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values

# DATABASE CONFIGURATION
# Phase 1: Neon.tech (Free tier, $0/month with 0 users)
# Phase 2: AWS Aurora Serverless v2 (Migrate when you have 10-20 paying customers)

# Current: Neon.tech (Phase 1)
DATABASE_URL="postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/database?sslmode=require"

# Future: AWS Aurora (Phase 2 - uncomment when ready to migrate)
# DATABASE_URL_AURORA="postgresql://username:password@aurora-endpoint:5432/database?sslmode=require"

# Infrastructure Mode: 'neon' (Phase 1) or 'aws' (Phase 2)
INFRASTRUCTURE_MODE="neon"

# NEXTAUTH CONFIGURATION
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-using-openssl-rand-base64-32"

# GOOGLE OAUTH
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# EMAIL SERVICE (Required for email verification, password reset, etc.)
# Option 1: Using SMTP (Gmail, SendGrid, Mailgun, etc.)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourcompany.com"

# Option 2: Alternative variable names (also supported)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# AI CONFIGURATION
# Primary Provider: Azure OpenAI Service (Enterprise-grade, recommended)
AI_PROVIDER="azure-openai" # Options: azure-openai, openai (legacy)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key-here"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4" # Your Azure OpenAI deployment name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME="text-embedding-ada-002" # Your Azure OpenAI embedding deployment name

# Legacy OpenAI Configuration (for migration period only - will be removed)
# OPENAI_API_KEY="sk-your-openai-api-key-here"
# OPENAI_MODEL="gpt-4o"
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# CI/CD Webhook Configuration
# GitHub Actions webhook secret (for verifying webhook signatures)
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret-here"

# Jenkins webhook token (for authenticating webhook requests)
JENKINS_WEBHOOK_TOKEN="your-jenkins-webhook-token-here"

# AWS INFRASTRUCTURE CONFIGURATION (Phase 2 - when ready to migrate)
# Phase 1: Uses local file system (free)
# Phase 2: Migrate to AWS S3 when ready

# AWS S3 Configuration (File Storage) - Only needed when INFRASTRUCTURE_MODE=aws
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-aws-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
# S3_BUCKET_NAME="wrkportal-uploads-us-east-1"

# AI FEATURES TOGGLE
AI_FEATURES_ENABLED="true"
AI_CHAT_ASSISTANT_ENABLED="true"
AI_RISK_PREDICTION_ENABLED="true"
AI_BUDGET_FORECASTING_ENABLED="true"

# REPORTING STUDIO ENCRYPTION KEY
# Used to encrypt sensitive data (database passwords, API keys, etc.)
# Generate with: openssl rand -base64 32
# IMPORTANT: Never commit this key to Git. Use different keys for dev/staging/production.
REPORTING_STUDIO_ENCRYPTION_KEY="generate-using-openssl-rand-base64-32"

# STRIPE PAYMENT CONFIGURATION (For Subscription Payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_... and pk_test_...) for development
# Use live keys (sk_live_... and pk_live_...) for production
STRIPE_SECRET_KEY="sk_test_..." # Your Stripe secret key
STRIPE_PUBLISHABLE_KEY="pk_test_..." # Your Stripe publishable key (for frontend)
STRIPE_WEBHOOK_SECRET="whsec_..." # Webhook signing secret (from Stripe Dashboard â†’ Webhooks)
# Note: For Next.js, you may also need NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY in your .env.local for client-side
